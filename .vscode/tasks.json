{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "make debug",
			"command": "make",
			"args": [
				"DEBUG=1",
				"USE_OPENGL=1",
				"-j8",
				"PLATFORM=x86-64"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "make release",
			"command": "make",
			"args": [
				"USE_OPENGL=1",
				"-j8",
				"PLATFORM=x86-64"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"label": "clean",
			"command": "make clean",
			"args": [],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}